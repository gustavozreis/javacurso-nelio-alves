import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		//String x;
		//System.out.println("Digite seu nome:");
		//x = sc.next();
		
		//System.out.println("Seu nome é " + x);
		
		System.out.println("Insira o primeiro valor da soma:");
		double primerValor = sc.nextDouble();
		System.out.println("Insira o segundo valor da soma:");
		double segunValor = sc.nextDouble();
		double somaTotal = primerValor + segunValor;
		System.out.println("O resultado da soma é: " + somaTotal);
		
		
		sc.close();
	}

}
