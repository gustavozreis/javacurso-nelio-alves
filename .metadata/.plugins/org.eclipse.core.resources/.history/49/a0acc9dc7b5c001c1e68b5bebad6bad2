import java.util.Locale;
import java.util.Scanner;

public class Main {
	
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Insira o número do funcionário:");
		int numeroFunc = sc.nextInt();
		System.out.println("Insira as horas trabalhadas:");
		int horasTrab = sc.nextInt();
		System.out.println("Insira o salário:");
		double salario = sc.nextDouble();
		
		System.out.println(numeroFunc);
		double salary = ("NUMBER" + horasTrab * salario);
		System.out.printf("U$ %.2f", salary);
		
		
		
		
		sc.close();
		
	}
}