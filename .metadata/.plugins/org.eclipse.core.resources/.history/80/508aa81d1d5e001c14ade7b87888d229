
public class Alunos {
	
	String nomeAluno;
	double primeiraNota;
	double segundaNota;
	double terceiraNota;
	double finalGrade;
	
	//construtor?
	public Alunos(String nomeAluno,
				  double primeiraNota,
				  double segundaNota,
				  double terceiraNota) {
		
		nomeAluno = nomeAluno;
		primeiraNota = primeiraNota;
		segundaNota = segundaNota;
		terceiraNota = terceiraNota;
	}
	
	//operação da média
	public void finalGrade() {
		finalGrade = (primeiraNota + segundaNota + terceiraNota) / 3;
	}
	
	//passou de ano ou nao
	public void passOrNot() {
		double pontosFaltando = 100 - finalGrade;
		if (finalGrade >= 60) {
			System.out.println("PASS");
		} else {
			System.out.println("FAILED");
			System.out.println("MISSING " + pontosFaltando + " POINTS");
		};
	}
	
	public void dadosAluno() {
		System.out.println("FINAL GRADE = " + finalGrade);
		passOrNot();
	}

}

